{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES6",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react"
  },
  "include": ["src"]
}
